<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMApp.customcontrol">




    <Style TargetType="{x:Type local:Custombutton}" BasedOn = "{StaticResource {x:Type Button}}">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5,0,5,0" 
                            Background="PaleTurquoise" 
                            BorderBrush="AliceBlue" 
                            BorderThickness="4"
                            Padding="25,3,0,0"
                            Height="35"
                            Width="100"
                            >
                        <ContentPresenter Content="Login" >
                            
                        </ContentPresenter>
                    </Border>
                   
                </ControlTemplate>
                
            </Setter.Value>
            
        </Setter>
        
    </Style>

    

    

    <Style TargetType="{x:Type local:CustomText}" BasedOn="{StaticResource {x:Type TextBlock} }">
        <Setter Property="Foreground" Value="DarkGreen">
        </Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="17"></Setter>
        
    </Style>
</ResourceDictionary>
